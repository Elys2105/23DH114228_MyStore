<style type="text/css">
    html {
        font-size: 14px;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

    body {
        background-color: aliceblue;
        margin: 0;
    }

    .header {
        background-color: white;
        width: 100%;
        max-width: 1500px;
        margin: auto;
        display: flex;
        align-items: center; /* Align items vertically centered */
    }

    /* Logo styling */
    .logo img {
        max-height: 60px;
    }

    /* Navigation menu styling */
    .nav ul {
        list-style: none;
        display: flex;
        justify-content: space-evenly;
        padding: 0;
        margin: 0;
        flex-grow: 1;
        margin-left: 700px; /* Dịch menu sang phải */
    }

        .nav ul li {
            flex: 1;
            text-align: center;
        }

            .nav ul li a {
                text-decoration: none;
                color: #333;
                font-size: 18px;
                padding: 15px 0;
                display: block;
                min-width: 120px;
                transition: background-color 0.3s, color 0.3s;
            }

    section {
        background-color: white;
        min-height: 300px;
    }
</style>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <!-- Logo and Navigation Menu -->
    <div class="header">
        <div class="logo">
            <img src="~/Content/pictures/logo (1).png" alt="Logo" />
        </div>
        <nav class="nav">
            <ul>
                <li><a href="~/Home/Test">Trang Chủ</a></li>
                <li><a href="~/Product/ProductDetail">Sản phẩm</a></li>
                <li><a href="~/Product/ShoppingCart">Giỏ hàng</a></li>
                <li><a href="#">Liên Hệ</a></li>
            </ul>
        </nav>
    </div>

    <section>
        @RenderBody()
    </section>
    <footer>
    </footer>
</body>
</html>
